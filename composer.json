{
    "name": "worksome/uk-tax-code-validator",
    "description": "A package for validating tax codes in UK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Nybroe",
            "email": "oliver@worksome.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "thecodingmachine/safe": "^1.3",
        "illuminate/contracts": "^8.46"
    },
    "require-dev": {
        "worksome/coding-style": "^0.1.7",
        "pestphp/pest": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\UkTaxCodeValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\UkTaxCodeValidator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "phpstan": "vendor/bin/phpstan analyse",
        "rector-ci": "vendor/bin/rector process --dry-run --ansi",
        "rector": "vendor/bin/rector process --ansi",
        "pest:test": "pest --colors=always --stop-on-failure"
    }
}
